<?xml version="1.0" encoding="utf-8"?>
<clock version="1" type="awesome" update_interval="60000" screenWidth="720">

	<VariableBinders>
		<ContentProviderBinder
				name="city_binder"
				uri="content://pro.burgerz.weather/cities"
				columns="location,isHome"
				where="isHome=1 OR isGPS=1"
				order="isHome DESC, isGPS DESC"
				countName="hasmaincity">
			<Variable name="cities_location" type="string" column="location" row="0"/>
			<Variable name="cities_ishome" type="int" column="isHome" row="0"/>
		</ContentProviderBinder>
		<ContentProviderBinder
				name="weather_binder"
				dependency="city_binder"
				uri="content://pro.burgerz.weather/weather"
				columns="station,temp,weatherID,sunrizeHour,sunrizeMinute,sunsetHour,sunsetMinute"
				whereFormat="station='%s'"
				whereParas="@cities_location"
				countName="hasweather">
			<Variable name="weather_location" type="string" column="station" row="0"/>
			<Variable name="weather_temperature" type="int" column="temp" row="0"/>
			<Variable name="weather_id" type="int" column="weatherID" row="0"/>
			<Variable name="sunrize_hour" type="int" column="sunrizeHour" row="0"/>
			<Variable name="sunrize_minute" type="int" column="sunrizeMinute" row="0"/>
			<Variable name="sunset_hour" type="int" column="sunsetHour" row="0"/>
			<Variable name="sunset_minute" type="int" column="sunsetMinute" row="0"/>
		</ContentProviderBinder>
	</VariableBinders>
	
	<Var name="day_start" expression="#sunrize_hour*60+#sunrize_minute"/>
	<Var name="day_end" expression="#sunset_hour*60+#sunset_minute"/>
	<Var name="is_night" expression="lt(#hour24*60+#minute,#day_start)+ge(#hour24*60+#minute,#day_end)"/>
	<Var name="is_rain" expression="ge(#weather_id,4)*le(#weather_id,11)"/>
	<Var name="is_fog" expression="eq(#weather_id,3)+eq(#weather_id,24)"/>
	<Var name="is_snow" expression="ge(#weather_id,12)*le(#weather_id,17)"/>
	<Var name="is_dust" expression="ge(#weather_id,18)*le(#weather_id,21)+eq(#weather_id,23)"/>
	<Var name="icon_suffix" expression="ifelse(isnull(#weather_id),99,gt(#weather_id,24),99,#weather_id)"/>
	<Var name="icon_index" expression="ifelse(#is_night*eq(#weather_id,0),90,#is_night*eq(#weather_id,1),91,#is_rain,4,#is_snow,12,#is_dust,18,#is_fog,3,#icon_suffix)"/>
	<Var name="show_weather" expression="#hasweather*not(isnull(@weather_location))"/>
	<Var name="short_location" expression="ifelse(isnull(@weather_location),0,le(len(@weather_location),10))"/>
	
	<Group>
		<Time name="time" x="#screen_width-44" y="154" align="right" alignV="center" src="time.png"/>
		<Group visibility="#short_location">
			<DateTime x="#view_width-44" y="222+4" align="right" alignV="top" color="#000000" alpha="25" size="32" format="@long_date_time" name="datetime"/>
			<DateTime x="#view_width-44" y="222" align="right" alignV="top" color="#ffffff" alpha="234" size="32" format="@long_date_time"/>
			<DateTime x="#view_width-44" y="264+4" align="right" alignV="top" color="#000000" alpha="25" size="32" format="EEEE" name="datetime"/>
			<DateTime x="#view_width-44" y="264" align="right" alignV="top" color="#ffffff" alpha="234" size="32" format="EEEE"/>
			<Group visibility="#show_weather">
				<Text textExp="''+@weather_location+', '+ifelse(isnull(#weather_temperature),'-',#weather_temperature)+'°'" x="60" y="264+4" align="left" alignV="top" color="#000000" alpha="25" size="32"/>
				<Text textExp="''+@weather_location+', '+ifelse(isnull(#weather_temperature),'-',#weather_temperature)+'°'" x="60" y="264" align="left" alignV="top" color="#ffffff" alpha="234" size="32"/>
			</Group>
		</Group>
		<Group visibility="not(#short_location)">
			<DateTime x="#view_width-44" y="254+4" align="right" alignV="top" color="#000000" alpha="25" size="32" format="@long_date_time" name="datetime"/>
			<DateTime x="#view_width-44" y="254" align="right" alignV="top" color="#ffffff" alpha="234" size="32" format="@long_date_time"/>
			<DateTime x="#view_width-44" y="294+4" align="right" alignV="top" color="#000000" alpha="25" size="32" format="EEEE" name="datetime"/>
			<DateTime x="#view_width-44" y="294" align="right" alignV="top" color="#ffffff" alpha="234" size="32" format="EEEE"/>
			<Group visibility="#show_weather">
				<Text textExp="@weather_location+', '+ifelse(isnull(#weather_temperature),'-',#weather_temperature)+'°'" x="60" y="290+4" align="right" alignV="top" color="#000000" alpha="25" size="32"/>
				<Text textExp="@weather_location+', '+ifelse(isnull(#weather_temperature),'-',#weather_temperature)+'°'" x="60" y="290" align="right" alignV="top" color="#ffffff" alpha="234" size="32"/>
			</Group>
		</Group>
		<Group visibility="#show_weather">
			<Image x="35" y="70" align="left" alignV="top" srcExp="'weather_'+#icon_index+'.png'"/>
		</Group>
	</Group>
	
	<Button name="clock_button" x="#view_width-#time.actual_w-39" y="74" w="#time.actual_w" h="#time.actual_h/2+138"/>
	<Button x="35" y="70" w="200" h="180" >
		<Triggers>
			<Trigger action="up">
			<IntentCommand action="android.intent.action.MAIN" package="com.miui.weather2" class="com.miui.weather2.ActivityWeatherCycle"/>
			</Trigger>
		</Triggers>
	</Button>
</clock>